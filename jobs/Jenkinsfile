import groovy.json.JsonSlurperClassic

def jsonParse(def json) {
    new groovy.json.JsonSlurperClassic().parseText(json)
}
pipeline {
  agent { label 'master' }
  environment {
    appName = "variable" 
  }
  stages {

 stage("paso 1"){
     
      steps {
          script {			
           echo "echo 'hola mundo'"
        }
      }
    }
  }
  post {
      always {          
          deleteDir()
           echo "echo 'fase always'"
      }
      success {
            echo "echo 'fase success'"
        }

      failure {
            echo "echo 'fase failure'"
      }
      
  }
}  

